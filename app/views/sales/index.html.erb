<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Precio</th>
      <th>Monto cliente</th>
      <th>Ganancia</th>
      <th>Vendido</th>
      <th>Pagado</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.descripcion %></td>
        <td><%= sale.precio %></td>
        <td><%= sale.monto_cliente %></td>
        <td><%= sale.ganancia %></td>
        <td><%= sale.vendido %></td>
        <td><%= sale.pagado %></td>
        <td><%= sale.account_id %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

